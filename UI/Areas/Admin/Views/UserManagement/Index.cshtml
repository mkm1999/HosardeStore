@using UI.Areas.Admin.Models
@model List<UserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div>
        <div class="input-group m-5">
            <input type="text"  id="search" class="form-control" placeholder="جستجو">
            <div class="input-group-append">
                <button onclick="Search()" class="btn btn-primary" type="button">
                    <i class="ti-search"></i>
                </button>
            </div>
        </div>
    </div>
    <table class="table table-striped table-dark m-5">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                        <button class="btn btn-warning" href="#" onclick="EditUser(@item.Id,'@item.Email','@item.PhoneNumber','@item.FirstName','@item.LastName')">ویرایش</button>
                        <button class="btn btn-danger" onclick="DeleteUser(@item.Id,'@item.FirstName@item.LastName')">حذف</button>
                        <button class="btn btn-warning" onclick="EditUserPassword(@item.Id)">ویرایش پسورد</button>
                        <a class="btn btn-success" href="/Admin/UserManagement/EditRole?UserId=@item.Id&FName=@item.FirstName&LName=@item.LastName">مدیریت نقش ها</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
    <button class="btn btn-primary" onclick="AddMember()">افزودن کاربر جدید</button>
</div>

@section script{
    <script src="~/admin/js/indexusermanagementadmin.js"></script>
}