<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>قالب Nextable - قالب مدیریتی نکستیبل</title>

	<!-- Favicon -->
	<link rel="shortcut icon" href="~/admin/assets/media/image/favicon.png">

	<!-- Theme Color -->
	<meta name="theme-color" content="#5867dd">

	<!-- Plugin styles -->
	<link rel="stylesheet" href="~/admin/vendors/bundle.css" type="text/css">

	<!-- App styles -->
	<link rel="stylesheet" href="~/admin/assets/css/app.css" type="text/css">
</head>

<body>
        <!-- begin::page loader-->
        <div class="page-loader" style="display: none;">
            <div class="spinner-border"></div>
        </div>
        <!-- end::page loader -->
        <!-- begin::navigation -->
        <div class="navigation">
            <div class="navigation-icon-menu">
                <ul>
					<li data-toggle="tooltip" title="" data-original-title="کاربران" class="active">
                        <a href="#navigationPages" title=" کاربران">
                            <i class="icon ti-user"></i>
                        </a>
                    </li>
					<li data-toggle="tooltip" title="" data-original-title="محصولات">
						<a href="#navigationApps" title="محصولات">
							<i class="icon ti-package"></i>
						</a>
					</li>
                </ul>
                <ul>
                    <li data-toggle="tooltip" title="" data-original-title="ویرایش پروفایل">
                        <a href="#" class="go-to-page">
                            <i class="icon ti-settings"></i>
                        </a>
                    </li>
                    <li data-toggle="tooltip" title="" data-original-title="خروج">
						<a href="/Authentication/Logout" class="go-to-page">
                            <i class="icon ti-power-off"></i>
                        </a>
                    </li>
                </ul>
            </div>
			<div class="navigation-menu-body">
				<ul id="navigationPages" class="navigation-active">
					<li class="navigation-divider">کاربران</li>
					<li><a href="/Admin/PrivacyAndPolicy">حریم خصوصی و قوانین</a></li>
					<li>
						<a href="/Admin/UserManagement">مدیریت کاربران</a>
					</li>
				</ul>
				<ul id="navigationApps">
					<li class="navigation-divider">محصولات</li>

					<li >
						<a href="/Admin/Products/Index">مدیریت محصولات</a>
					</li>
					<li>
					<a href="/Admin/Products/AddNewProduct">افزودن محصول جدید</a>
					</li>
					<li>
						<a href="/Admin/Products/Categories">دسته بندی ها</a>
					</li>
				</ul>
			</div>
        </div>
        <!-- end::navigation -->
        <!-- begin::header -->
        <div class="header">

            <!-- begin::header logo -->
            <div class="header-logo">
                <a href="index.html">
				<img class="large-logo" src="~/assets/images/logo.png" alt="image">
				<img class="small-logo" src="~/assets/images/logo.png" alt="image">
				<img class="dark-logo" src="~/assets/images/logo.png" alt="image">
                </a>
            </div>
            <!-- end::header logo -->
            <!-- begin::header body -->
			<div class="header-body">

				<div class="header-body-left">

					@await Component.InvokeAsync("GetUserRole")
					<!-- end::breadcrumb -->

				</div>

				<div class="header-body-right">
					<!-- begin::navbar main body -->
					<ul class="navbar-nav">
						<li class="nav-item dropdown">
							<a href="#" class="nav-link bg-none" data-sidebar-open="#userProfile">
								<div>
									<figure class="avatar avatar-state-success avatar-sm">
										<img src="assets/media/image/avatar.jpg" class="rounded-circle" alt="image">
									</figure>
								</div>
							</a>
						</li>
					</ul>
					<!-- end::navbar main body -->

					<div class="d-flex align-items-center">
						<!-- begin::navbar navigation toggler -->
						<div class="d-xl-none d-lg-none d-sm-block navigation-toggler">
							<a href="#">
								<i class="ti-menu"></i>
							</a>
						</div>
						<!-- end::navbar navigation toggler -->
						<!-- begin::navbar toggler -->
						<div class="d-xl-none d-lg-none d-sm-block navbar-toggler">
							<a href="#">
								<i class="ti-arrow-down"></i>
							</a>
						</div>
						<!-- end::navbar toggler -->
					</div>
				</div>

			</div>
				<!-- end::header body -->

			</div>
        <!-- end::header -->
        <!-- begin::main content -->
        <main class="main-content">
            @RenderBody()
        </main>

    <script src="~/admin/vendors/bundle.js"></script>
    <script src="~/admin/assets/js/app.js"></script>
    @RenderSection("script",false);
</body>

</html>