@using Application.AddressService;
@model AddressDto
@{
    ViewData["Title"] = "Submit New Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="checkout woocommerce-checkout">
    <div class="content-checkout container">
        <div class="middle-container">
            <div class="d-flex align-items-center justify-content-between">
                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-geo-alt col-2 col-md-1" viewBox="0 0 16 16">
                    <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z" />
                    <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                </svg>
                <div class="col-11">
                    <p class="text-muted">آدرس تحویل سفارش</p>
                    <p class="h4 font-weight-bolder">@Model.State @Model.City @Model.address  @Model.PostalCode</p>
                    <a href="/Address" class="btn btn-outline-info">تغییر آدرس</a>
                    @if (string.IsNullOrEmpty(Model.City))
                    {
                        <a href="/Address/Add" class="btn btn-outline-info">افزودن آدرس</a>

                    }
                </div>
            </div>

            <div class="m-5" >
                <p class="text-primary h5">شیوه ارسال</p>

                @if (ViewBag.IsBikeActive)
                {
                    <div class="d-flex justify-content-between align-items-center my-3">
                        <div class="form-check ">
                            <input class="form-check-input mt-2" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                            <label class="form-check-label mr-3  text-info" for="flexRadioDefault1">
                                پیک فروشگاه
                            </label>
                        </div>
                        <p class="text-dark pt-3">@ViewBag.BikeDeliveryCost.ToString("N0")</p>
                    </div>
                }

                <div class="d-flex justify-content-between align-items-center my-3">
                    <div class="form-check">
                        <input class="form-check-input mt-2" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
                        <label class="form-check-label mr-3 text-info" for="flexRadioDefault2">
                            تیپاکس
                        </label>
                    </div>
                    <p class="text-dark pt-3">50,000</p>

                </div>
                
                <div class="d-flex justify-content-between align-items-center my-3">
                    <div class="form-check">
                        <input class="form-check-input mt-2" type="radio" name="flexRadioDefault" id="flexRadioDefault3" checked>
                        <label class="form-check-label mr-3  text-info" for="flexRadioDefault2">
                            پست پیشتاز
                        </label>
                    </div>
                    <p class="text-dark pt-3">50,000</p>

                </div>
                
            </div>
        </div>
    </div>
</div>


